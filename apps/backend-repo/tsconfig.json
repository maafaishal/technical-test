{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["*"]
    },
    "useUnknownInCatchVariables": false
  },
  "ts-node": {
    "require": ["tsconfig-paths/register", "./config.ts"]
  },
  "include": [
    "bin",
    "config",
    "core",
    "routes",
    "scripts",
    "eslint.config.mjs",
    "config.ts"
  ],
  "exclude": ["node_modules"]
}
