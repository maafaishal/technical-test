{
  "name": "ebuddy-technical-test",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:all": "turbo dev --parallel",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "lint-staged": "turbo run lint-staged",
    "start:emulators": "cd apps && firebase emulators:start --import=./emulator-data --export-on-exit"
  },
  "devDependencies": {
    "turbo": "^2.4.0",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "sort-package-json": "^2.14.0",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.15.5",
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "**/*.{json,md,css}": "pnpm format",
    "**/*.{json}": "npx sort-package-json"
  }
}
